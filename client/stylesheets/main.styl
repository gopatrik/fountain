bgWidth = 80vw


html, body
	height 100%
	

body
	min-height 100%


.background
	position fixed
	width 100vw
	height 100vh

.hex-input-container
	position absolute
	bottom 0
	width 100%
	height 10vh
	color white
	font-size 10vw	
	background rgba(black, 0.1)
	border-top 2px solid rgba(black,0.1)
	text-align center
	vertical-align middle
	
	&:before
		content "#"
		font-family avenir
		font-weight bold
		vertical-align middle
		display inline-block

input[name=hex-field]
	margin-top 1vh
	width 40vw
	font-family avenir
	vertical-align middle
	display inline-block
	text-align left
	font-size 10vw
	color white
	background none
	border none
	outline none

.lupe
	margin-top -4vw
	margin-left -4vw
	width 8vw
	height @width
	border .8vw solid white
	border-radius 50%
	background transparent
	box-shadow 0 0 .2vw .4vw rgba(black,0.2)
	position absolute
	z-index 10

.menu-toggle
	height: 5vh;
	width: 5vh;
	// background: white;
	position:absolute;
	left: 3vh;
	bottom:2vh;
	z-index:100;
	.line
		border-radius .2vh
		height .5vh
		background: white;
		&:not(:nth-child(1))
			margin-top 1vh
		

.side-nav
	position fixed
	left 0
	height 100vh
	background rgba(#232830,0.95)
	z-index 11
	width 45vw
	overflow-y scroll
	
	.big-item
		height 20vh
		border-bottom 1px solid black
		background white
		
	.text-item
		padding 1vh
		font-size 3vh
		color rgba(white,0.9)